<div class="container mt-5">
  <h2><%= @user.name %>さんとのチャット</h2>
  <hr>
  <table>
    <thead>
      <tr>
        <th>投稿者名</th>
        <th>メッセージ</th>
      </tr>
    </thead>

    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.user.name %></td>
          <td><%= chat.message %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <div class="row mt-5">
    <%= form_with model:@chat do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
      <%= f.submit %>
    <% end %>
  </div>
</div>